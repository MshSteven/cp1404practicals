BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '0'
            font_size: 48
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    BoxLayout:
        orientation: 'vertical'
#        Button:
#            text: 'Convert m to km'
#            on_press: app.handle_convert()
        Label:
            id: output_label
            font_size: 48
            text: app.message
            color: (1, 1, 0, 1)